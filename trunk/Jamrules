# top level Jamrules used by Boost.Build

project bm ;

# Establish this as the root of the bm installation. Most targets will want
# $(BM_ROOT) in their #include path.
path-global BM_ROOT : . ;

# The current version of bm.
BM_VERSION ?= 0.0.1 ;
